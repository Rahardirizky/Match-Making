<h1 class="display-3 text-center">Baby List</h1>
        <br>
        <div class="container">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col" class="align-middle">User Name</th>
                        <th scope="col" class="align-middle">Full Name</th>
                        <th scope="col" class="align-middle">Age</th>
                        <th scope="col" class="align-middle">Expected Allowance</th>
                        <th scope="col" class="align-middle">Location</th>
                        <th scope="col" class="align-middle">Action</th>
                    </tr>
                </thead>
                <tbody>
                  <%babies.forEach(el => { %>
                    <tr>
                        <td class="align-middle"><%=babies.username%></td>
                        <td class="align-middle"><%=babies.profile.getFullName%></td>
                        <td class="align-middle">(show age)</td>
                        <td class="align-middle">(show expected allowance)</td>
                        <td class="align-middle">(show area)</td>
                        <td class="align-middle"><a type="button" class="btn btn-secondary" href="/babies/#">See Profile</a></td>
                    </tr>
                  <%})%>
                </tbody>
            </table>
        </div>
    </body>
